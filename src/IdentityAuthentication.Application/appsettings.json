{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Autnentication": {
    "TokenType": "JWT", // JWT or Reference
    "EncryptionAlgorithm": "RS256", // RS256(RsaSha256) or HS256(HmacSha256)
    "EnableGrpcConnection": true,
    "EnableJwtEncrypt": false, // 对 jwt 进行加密
    "LDAP": {
      "Endpoint": "",
      "Port": 0,
      "Domain": ""
    }
  },
  "AccessToken": {
    "Issuer": "IdentityAuthentication",
    "Audience": "Client",
    "ExpirationTime": 3600, // Access Token 过期时间，以秒为单位
    "RefreshTime": 600      // Access Token 刷新时间，以秒为单位。如果 Access Token 的过期时间小于刷新时间，则刷新 token
  },
  "RefreshToken": {
    "Issuer": "Authentication",
    "Audience": "Identity-Client",
    "ExpirationTime": 30  // Refresh Token 过期时间，以天为单位
  },
  "SecretKey": { // RSA secret key type must be Pkcs8
    "RsaPublicKey": "",
    "RsaPrivateKey": "",
    "HmacSha256Key": "3d37adf4f8a593811d8035c9a355bb25"
  },
  "CacheStorage": { // Autnentication.TokenType 为 Reference 的时候启用存储
    "StorageType": "Memory", // Memory or Redis
    "RedisConnection": ""
  }
}
