{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "KestrelConfigure": {
    "Endpoints": [
      {
        "Port": 5100,
        "IPAddress": "Any",
        "Certificate": {
          "Path": "Certificates",
          "FileName": "Authentication.pfx",
          "Password": "F8A593811D8035C9",
          "SslProtocols": "Tls12"
        }
      }
    ]
  },
  "GrantDefaults": {
    "GrantTypeDefault": "Password",
    "GrantSourceDefault": "Local",
    "ClientDefault": "Browser"
  },
  "Authentication": {
    "TokenType": "JWT", // JWT or Reference
    "EncryptionAlgorithm": "RS256", // RS256(RsaSha256) or HS256(HmacSha256)
    "EnableGrpcConnection": true, // 启用 grpc
    "EnableJwtEncrypt": false, // 对 jwt 进行加密
    "LDAP": {
      "Endpoint": "",
      "Port": 0,
      "Domain": ""
    },
    "Employee": {
      "Endpoint": "https://127.0.0.1:5000"
    }
  },
  "AccessToken": {
    "Issuer": "IdentityAuthentication",
    "Audience": "Client",
    "ExpirationTime": 3600, // Access Token 过期时间，以秒为单位
    "RefreshTime": 600 // Access Token 刷新时间，以秒为单位。如果 Access Token 的过期时间小于刷新时间，则刷新 token
  },
  "RefreshToken": {
    "Issuer": "Authentication",
    "Audience": "Identity-Client",
    "ExpirationTime": 30 // Refresh Token 过期时间，以天为单位
  },
  "SecretKey": { // RSA secret key type must be Pkcs8
    "RsaSignaturePublicKey": "",
    "RsaSignaturePrivateKey": "",
    "RsaEncryptPublicKey": "",
    "RsaDecryptPrivateKey": "",
    "HmacSha256Key": "3d37adf4f8a593811d8035c9a355bb25"
  },
  "CacheStorage": { // Authentication.TokenType 为 Reference 的时候启用缓存
    "StorageType": "Memory", // Memory or Redis   -- 如果是多实例部署，请使用 Redis 分布式缓存
    "MemonySizeLimit": 0, // 0 为不设置容量大小，仅在 StorageType 为 Memory 时有效
    "CacheExpirationTime": 30, // 缓存过期时间，以天为单位
    "RedisConnection": ""
  }
}
